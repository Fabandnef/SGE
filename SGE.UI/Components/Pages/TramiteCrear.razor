@page "/tramite/crear"

@using SGE.Aplicacion.CasosDeUso
@using SGE.Aplicacion.Enumerativos

@inject NavigationManager    NavigationManager
@inject TramiteAltaCasoDeUso _tramiteAltaCasoDeUso
@inject Session              CurrentSession

<section class="">
    <div class="mx-auto max-w-screen-xl py-8 px-4 lg:py-16">
        <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Cargar un nuevo tramite</h2>
        <form method="post" @onsubmit="CrearTramite">
            <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg p-3 sm:p-5 grid gap-4 grid-rows-2 grid-cols-1 sm:gap-6">
                <div>
                    <label for="etiqueta" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Etiqueta</label>
                    <select @bind="_etiqueta" @onfocus="() => _error = string.Empty" name="etiqueta" id="etiqueta" class="@(!string.IsNullOrEmpty(_error) ? "border-red-700 dark:border-red-700" : "border-gray-300 dark:border-gray-600") bg-gray-50 border text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" required="required">
                        @foreach (EtiquetaTramite etiqueta in Enum.GetValues(typeof(EtiquetaTramite))) {
                            <option value="@etiqueta">@etiqueta</option>
                        }
                    </select>
                </div>
                <div>
                    <label for="contenido" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contenido</label>
                    <textarea @bind="_contenido" @onfocus="() => _error = string.Empty" name="contenido" id="contenido" rows="4" class="@(!string.IsNullOrEmpty(_error) ? "border-red-700 dark:border-red-700" : "border-gray-300 dark:border-gray-600") block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="required" placeholder="Ingrese el contenido"></textarea>
                </div>
                <div class="text-center pt-2">
                    <span class="text-sm h-4 block text-red-500 dark:text-red-400">@_error</span>
                </div>
            </div>
            <button type="submit"
                    class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                Crear Tramite
            </button>
        </form>
    </div>
</section>


@code {
    [Parameter] public Expediente? expediente { get; set; }
    
    private EtiquetaTramite _etiqueta;
    private string          _contenido = String.Empty;
    private int             _expedienteId;
    private string          _error = String.Empty;

    // protected override void OnInitialized()
    // {
    //     if (expediente == null) {
    //         NavigationManager.NavigateTo("/tramite/listar");
    //     }
    // }
    
    private void CrearTramite()
    {
        Tramite tramite = new() {
                                    Etiqueta     = _etiqueta,
                                    Contenido    = _contenido.Trim(),
                                    ExpedienteId = expediente.Id,
                                };

        try {
            _tramiteAltaCasoDeUso.Ejecutar(tramite, CurrentSession.Usuario!);
            NavigationManager.NavigateTo($"/tramite/{tramite.Id}");
        }
        catch (Exception e) {
            _error = e.Message;
        }
    }

}